{
  "name": "build-esm",
  "version": "2.0.1",
  "description": "Compile an ES Module for release on npm",
  "keywords": [
    "babel",
    "esm",
    "npm"
  ],
  "homepage": "https://github.com/vinsonchuong/build-esm",
  "bugs": "https://github.com/vinsonchuong/build-esm/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "files": [
    "LICENSE",
    "README.md",
    "src"
  ],
  "bin": {
    "build-esm": "src/bin/build-esm.js"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinsonchuong/build-esm"
  },
  "scripts": {
    "test": "flow && standard --fix && ava",
    "build": "babel-node src/bin/build-esm.js",
    "prepublishOnly": "babel-node src/bin/build-esm.js"
  },
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "pkgfiles": "^2.3.2",
    "rimraf": "^2.6.1",
    "thenify": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-plugin-package-name-import": "^1.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.24.1",
    "flow-bin": "^0.46.0",
    "standard-esnext": "^1.0.14"
  },
  "babel": {
    "presets": [
      "latest",
      "flow"
    ],
    "plugins": [
      "transform-runtime",
      "package-name-import"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": "babel-register"
  },
  "standard": {
    "ignore": [
      "test/fixtures/"
    ]
  }
}
