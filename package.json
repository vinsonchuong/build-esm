{
  "name": "build-esm",
  "version": "3.0.1",
  "description": "Compile an ES Module for release on npm",
  "keywords": [
    "babel",
    "esm",
    "npm"
  ],
  "homepage": "https://github.com/vinsonchuong/build-esm",
  "bugs": "https://github.com/vinsonchuong/build-esm/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "files": [
    "LICENSE",
    "README.md",
    "src"
  ],
  "bin": {
    "build-esm": "src/bin/build-esm.js"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinsonchuong/build-esm"
  },
  "scripts": {
    "test": "flow && standard -v --fix && ava",
    "build": "node -r babel-register src/bin/build-esm.js",
    "prepack": "node -r babel-register src/bin/build-esm.js"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "pkgfiles": "^2.3.2",
    "rimraf": "^2.6.1",
    "thenify": "^3.3.0"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-preset-diff": "^0.0.3",
    "babel-register": "^6.24.1",
    "flow-bin": "^0.49.1",
    "standard-esnext": "^3.0.0"
  },
  "babel": {
    "presets": [
      "diff"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": "babel-register"
  },
  "standard": {
    "ignore": [
      "test/fixtures/"
    ]
  }
}
